{
  "manifest_version": 3,
  "name": "M365 Admin Companion Agent",
  "version": "0.1.0",
  "description": "Your secure AI assistant for creating Graph Connectors.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "*://*.microsoft.com/*",
    "*://*.office.com/*",
    "*://admin.cloud.microsoft/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://admin.microsoft.com/*", 
        "https://portal.office.com/*",
        "https://*.office.com/*",
        "https://admin.cloud.microsoft/*",
        "https://admin-sdf.microsoft.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Companion",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
